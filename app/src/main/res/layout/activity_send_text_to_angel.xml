<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".com.edward6chan.www.guardian.SendTextToAngel"
android:background="@color/guardian_white">


<LinearLayout
    android:id="@+id/send_text_header"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_height"
    android:background="@color/guardian_blue"
    android:orientation="horizontal"
    android:gravity="center"
    >

    <TextView
        style="@style/TitleSetupText"
        android:id="@+id/title_header"
        android:layout_height="@dimen/header_height"
        android:text="@string/send_text_header"/>

</LinearLayout>
    <ImageButton
        android:id="@+id/send_message_to_angel"
        android:background="@color/guardian_blue"
        android:layout_alignRight="@id/send_text_header"
        android:gravity="top|right"
        android:layout_gravity="top|right"
        android:paddingRight="20dp"
        android:layout_height="@dimen/header_height"
        android:layout_width="wrap_content"
        android:onClick="sendTextMessageButton"
        android:src="@drawable/ic_action_send"
        />


<TextView
    style="@style/SetupText"
    android:id="@+id/send_text_tv"
    android:layout_below="@id/send_text_header"
    android:text="@string/send_text_tv"
    android:textSize="@dimen/text_instructions_large"
    android:paddingTop="@dimen/text_padding_instructions"
    android:paddingBottom="@dimen/text_padding_instructions"/>

<!--<TextView
        style="@style/SetupText"
        android:id="@+id/edit_text_tv"
        android:layout_below="@id/send_text_tv"
        android:text="Tap to edit"
        android:textSize="15dp"
        android:paddingBottom="5dp" />-->
<EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/TextMessage"
    android:layout_below="@id/send_text_tv"
    android:paddingRight="30dp"
    android:paddingLeft="30dp"
    android:paddingBottom="5dp"
    android:text="@string/predefined_text_message" />




</RelativeLayout>

