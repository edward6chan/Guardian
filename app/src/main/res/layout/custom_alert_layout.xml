<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/guardian_white"
    >

    <LinearLayout
        android:id="@+id/timer_expired_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/guardian_blue"
        android:orientation="horizontal"

        >

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/title_header"
        android:layout_height="@dimen/header_height"
        android:text="Immobile Timer Expired"
        android:textColor="@color/guardian_white"
        android:textSize="25dp"
        android:paddingTop="7.5dp"
        android:paddingBottom="7.5dp"
        android:paddingLeft="4dp"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:text="Are you okay?"
        android:textSize="30dp"
        android:textColor="@color/guardian_black"
        android:layout_below="@id/timer_expired_header"/>
    <TextView
        android:id="@+id/ok_timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingBottom="10dp"
        android:textColor="@color/guardian_black"
        android:layout_below="@id/message"
        />

    <!--<LinearLayout
